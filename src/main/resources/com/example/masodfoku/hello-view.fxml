<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.example.masodfoku.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <HBox prefHeight="28.0" prefWidth="200.0">
      <children>
         <TextField prefHeight="26.0" prefWidth="22.0" fx:id="num1" />
         <Text strokeType="OUTSIDE" strokeWidth="0.0" text="x^2+" />
         <TextField prefHeight="26.0" prefWidth="22.0" fx:id="num2" />
         <Text strokeType="OUTSIDE" strokeWidth="0.0" text="x+" />
         <TextField prefHeight="26.0" prefWidth="22.0" fx:id="num3" />
         <Text strokeType="OUTSIDE" strokeWidth="0.0" text="=0" />
      </children>
   </HBox>
   <Button mnemonicParsing="false" text="Button" onAction="#solveEquation"/>
   <Label text="x1 =" fx:id="result1"/>
   <Label text="x2 =" fx:id="result2"/>
</VBox>
